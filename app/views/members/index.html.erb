<%= render "navbar" %>
<div class="container">

<div class="row">
  <%= form_tag members_path, method: :get do %>
    <div class="col-md-9">
       <%= text_field_tag :q,params[:q] ,class: "form-control" %>
    </div>

    <div class="col-md-1">
      <%= select_tag :choice, options_for_select([['All', "all"], ['firstname', "firstname"], 
      ['lastname', "lastname"],['address', "address"], ['phone', "phone"], ['age', "age"]],selected: params[:choice] ) %>
    </div>  

    <div class="col-md-1">
      <%= button_tag 'Search',:class => "btn btn-default", name: nil %>
    </div>
  <% end %>
</div>

<div class="row" style="margin:22px;">
  <%= link_to "Add", new_member_path , class: "btn btn-primary" %>
</div>

<div class="row">
  <table class="table table-striped">
    <thead>
      <th>No</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Age</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Tools</th>
    </thead>
    <tbody>
      <% @members.each_with_index do |member,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= member.firstname %></td>
        <td><%= member.lastname %></td>
        <td><%= member.age %></td>
        <td><%= member.address %></td>
        <td><%= member.phone %></td>
        <td>Tools</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>


